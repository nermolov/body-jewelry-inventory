<%# 
row: "header" | "row" | "last-row",
%>

<<%= row == "header" ? "th" : "td" %> class="<%= class_names({
    "py-[14px] border-b-2": row == "header",
    "py-4": row != "header",
    "border-b": row == "row"
  },
  "px-3 first:pl-0 last:pr-0 border-gray-400"
  ) %>">
  <%= yield %>
</<%= row == "header" ? "th" : "td" %>>
