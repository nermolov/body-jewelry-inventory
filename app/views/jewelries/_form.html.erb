<%= app_form_with(model: jewelry) do |f| %>
  <%= f.input :name %>

  <%= f.input :brand_id, collection: Brand.all, text_method: :name, value_method: :id %>
  <%= f.input :location_id, collection: Location.all, text_method: :name, value_method: :id %>
  <%= f.input :material_id, collection: Material.all, text_method: :name, value_method: :id %>
  <%= f.input :studio_id, collection: Studio.all, text_method: :name, value_method: :id %>

  <%= hidden_field(:jewelry, :jewelry_attributes_type) %>

  <%= f.fields_for :jewelry_attributes do |f| %>
    <%= f.input :gauge, as: :integer %>
  <% end %>

  <%= render "partials/form_save_or_delete", record: jewelry, f: f %>
<% end %>
